<?xml version="1.0"?>
<component name="com.sharplabs.clouddesk.theme.flavor">

  <require>com.sharplabs.clouddesk.theme.style</require>
  <require>org.nuxeo.ecm.user.center.profile.theme</require>
  <require>org.nuxeo.ecm.user.center.theme</require>
  <require>org.nuxeo.social.collaboration.theme</require>

  <extension target="org.nuxeo.theme.styling.service" point="flavors">
    <flavor name="clouddeskflavor" extends="default">
      <logo>
        <path>/img/Title.png</path>
        <previewPath>/img/Title.png</previewPath>
        <width>136</width>
        <height>27</height>
        <title>CloudDesk</title>
      </logo>
      <presetsList append="true">
        <presets category="border" src="themes/palettes/clouddeskflavor-borders.properties"/>
        <presets category="color" src="themes/palettes/clouddeskflavor-colors.properties"/>
        <presets category="background" src="themes/palettes/clouddeskflavor-backgrounds.properties"/>
        <presets category="font" src="themes/palettes/clouddeskflavor-fonts.properties"/>
      </presetsList>
      <palettePreview>
        <colors>
          <color>#cfecff</color>
          <color>#70bbff</color>
          <color>#4e9ae1</color>
          <color>#fff</color>
          <color>#fff</color>
          <color>#0079a6</color>
          <color>#00416b</color>
          <color>#332e2e</color>
          <color>#cfecff</color>
        </colors>
      </palettePreview>
    </flavor>
  </extension>

  <extension target="org.nuxeo.theme.styling.service" point="pages">
    <themePage name="galaxy/default">
      <flavors append="true"/>
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
        <style>navigation</style>
      </styles>
    </themePage>
    <themePage name="galaxy/popup">
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
        <style>navigation</style>
      </styles>
    </themePage>
    <themePage name="galaxy/print">
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
      </styles>
    </themePage>
    <themePage name="admin/default">
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
      </styles>
    </themePage>
    <themePage name="userCenter/default">
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
      </styles>
    </themePage>
    <themePage name="social-collaboration/dashboard">
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
      </styles>
    </themePage>
    <themePage name="*">
      <flavors append="true"/>
      <defaultFlavor>clouddeskflavor</defaultFlavor>
      <styles append="true">
        <style>clouddesk.css</style>
      </styles>
    </themePage>
  </extension>
    <!-- application settings -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="applications">
    <application root="${org.nuxeo.ecm.contextPath}" template-engine="jsf-facelets">
      <view id="/cd_view_home.xhtml">
        <theme>social-collaboration/dashboard</theme>
      </view>
	<view id="/others_docs_search_results.xhtml">
		<theme>social-collaboration/dashboard</theme>
	</view>	 

   </application>
  </extension>
  
</component>