        <layout>heading</layout>
        <layout>file</layout>
        <layout>cd_common</layout>
        <layout>cd_invoice</layout>
        <layout>cd_iwb</layout>
      </layouts>
      <layouts mode="view">
        <layout>cd_common</layout>
        <layout>cd_invoice</layout>
        <layout>cd_iwb</layout>
      </layouts>
    </type>
    
    
    

